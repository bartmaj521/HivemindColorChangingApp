<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="?android:attr/colorControlActivated"
            android:id="@+id/iv_color_display"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_control" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:visibility="gone"/>
    <Button
            android:text="Control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_control" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Remote screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_screen" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@android:color/holo_purple"
            android:id="@+id/ib_purple"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintBottom_toTopOf="@+id/ib_blue" android:visibility="gone"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@android:color/holo_red_dark"
            android:id="@+id/ib_red"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintBottom_toTopOf="@+id/ib_orange" android:visibility="gone"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@android:color/holo_blue_light"
            android:id="@+id/ib_blue"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.16"
            android:visibility="gone"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@android:color/holo_orange_dark"
            android:id="@+id/ib_orange"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.84" android:layout_marginBottom="8dp" android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>